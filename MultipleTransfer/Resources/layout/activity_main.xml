<?xml version="1.0" encoding="utf-8"?><LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"	xmlns:app="http://schemas.android.com/apk/res-auto"	xmlns:tools="http://schemas.android.com/tools"	android:orientation="vertical"	android:layout_width="match_parent"	android:layout_height="match_parent"	android:background="@android:color/white"	android:padding="30dp">	<ImageView		android:layout_width="100dp"		android:layout_height="100dp"		android:layout_marginTop="10dp"		android:layout_gravity="center_horizontal"		android:contentDescription="@string/alat_logo"		android:src="@drawable/newlogo"/>	<TextView		android:text="@string/set_goals"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:layout_marginTop="10dp"		android:layout_marginBottom="8dp"		android:textAlignment="center"		android:textSize="10dp"		android:textColor="#830053"		android:layout_gravity="center_horizontal"/>	<TextView		android:text="@string/score_them"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:layout_marginBottom="8dp"		android:textSize="10dp"		android:textColor="@android:color/black"		android:layout_gravity="center_horizontal"/>	<ImageView		android:src="@drawable/landing_pg_icon"		android:layout_width="247dp"		android:layout_height="241dp"		android:layout_gravity="center"		android:id="@+id/imageView1"		android:layout_marginTop="30dp"		android:contentDescription="@string/landpg_icon"/>	<Button		android:id="@+id/btn_login1"		android:text="@string/log_in"		android:layout_width="250dp"		android:layout_height="25dp"		android:textSize="10dp"		android:layout_gravity="center"		android:textAllCaps="false"		android:textColor="#830053"		android:background="@drawable/custom_edttxt_bg"		android:layout_marginTop="40dp"/>	<Button		android:id="@+id/getStarted"		android:text="@string/get_started"		android:layout_width="250dp"		android:layout_height="25dp"		android:textSize="10dp"		android:layout_gravity="center"		android:textAllCaps="false"		android:layout_marginTop="20dp"		android:textColor="@android:color/white"		android:background="#830053"/>	<LinearLayout		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:layout_marginStart="20dp"		android:layout_marginEnd="20dp"		android:orientation="horizontal"		android:layout_marginTop="70dp">		<LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"			android:layout_weight="1"			android:orientation="vertical">			<ImageView				android:id="@+id/getLoan"				android:src="@drawable/newloan"				android:layout_width="55dp"				android:layout_height="55dp"				android:layout_gravity="center"				android:minWidth="25px"				android:minHeight="25px"				android:contentDescription="@string/get_loan" />			<TextView				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_gravity="center"				android:text="@string/get_loan"				android:textSize="8dp"				android:textAlignment="center"				android:textColor="@android:color/black"/>		</LinearLayout>				<LinearLayout           android:layout_width="wrap_content"            android:layout_height="wrap_content"			android:layout_weight="1"			android:orientation="vertical">			<ImageView				android:id="@+id/quickLinks"				android:src="@drawable/newlinks"				android:layout_width="55dp"				android:layout_height="55dp"				android:layout_gravity="center"				android:minWidth="25px"				android:minHeight="25px"				android:contentDescription="@string/quick_links" />			<TextView				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_gravity="center"				android:textAlignment="center"				android:text="@string/quick_links"				android:textSize="8dp"				android:textColor="@android:color/black"/>		</LinearLayout>				<LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"			android:layout_weight="1"			android:orientation="vertical">			<ImageView				android:id="@+id/getWallet"				android:src="@drawable/newwallet"				android:layout_width="55dp"				android:layout_height="55dp"				android:layout_gravity="center"				android:minWidth="25px"				android:minHeight="25px"				android:contentDescription="@string/get_wallet" />			<TextView				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_gravity="center"				android:textAlignment="center"				android:text="@string/get_wallet"				android:textSize="8dp"				android:textColor="@android:color/black"/>		</LinearLayout>			</LinearLayout></LinearLayout>