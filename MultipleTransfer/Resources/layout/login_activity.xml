<?xml version="1.0" encoding="utf-8"?><LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"	android:orientation="vertical"	android:layout_width="match_parent"	android:layout_height="match_parent"	android:id="@+id/mainView"	android:padding="30dp">	<ImageView		android:layout_gravity="center_horizontal"		android:src="@drawable/newlogo"		android:contentDescription="@string/alat_logo"		android:layout_marginTop="60dp"		android:layout_width="100dp"		android:layout_height="100dp"/>	<TextView		android:text="@string/welcom_back"		android:layout_marginTop="10dp"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:gravity="center_horizontal"		android:layout_gravity="center_vertical"/>	<TextView		android:text="@string/email_Address"		android:layout_marginTop="50dp"		android:layout_marginBottom="10dp"		android:layout_gravity="center"		android:textAlignment="viewStart"		android:textColor="@android:color/black"		android:layout_width="300dp"		android:layout_height="wrap_content"		android:id="@+id/textView1" />	<com.google.android.material.textfield.TextInputEditText		android:id="@+id/edt_email"		android:layout_width="300dp"		android:layout_height="30dp"		android:layout_gravity="center"		android:background="@drawable/custom_edttxt_bg"/>	<TextView		android:text="@string/_password"		android:textColor="@android:color/black"		android:layout_marginTop="20dp"		android:layout_marginBottom="10dp"		android:textAlignment="viewStart"		android:layout_width="300dp"		android:layout_height="wrap_content"		android:layout_gravity="center"/>	<com.google.android.material.textfield.TextInputEditText		android:id="@+id/edt_password"		android:layout_width="300dp"		android:layout_gravity="center"		android:inputType="textPassword"		android:password="true"		android:layout_height="30dp"		android:background="@drawable/custom_edttxt_bg"/>	<TextView		android:text="@string/forget_password"		android:textColor="#830053"		android:layout_marginTop="5dp"		android:layout_gravity="center"		android:textAlignment="viewEnd"		android:layout_width="300dp"		android:layout_height="wrap_content"/>	<Button		android:id="@+id/btn_login2"		android:text="@string/log_in"		android:layout_marginTop="40dp"		android:layout_width="300dp"		android:layout_height="30dp"		android:layout_gravity="center"		android:background="#830053"		android:textColor="@android:color/white"/>	<TextView		android:text="@string/unable_to"		android:textColor="@android:color/black"		android:layout_marginTop="50dp"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:textSize="12dp"		android:layout_marginLeft="30dp"		android:layout_marginRight="25dp"		android:layout_gravity="center"/>	<TextView		android:text="@string/new_to_wema"		android:textColor="@android:color/black"		android:layout_marginTop="15dp"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:textSize="10dp"		android:layout_marginLeft="30dp"		android:layout_marginRight="25dp"		android:layout_gravity="center"/>	<TextView		android:text="@string/new_to_alat"		android:textColor="@android:color/black"		android:layout_marginTop="15dp"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:textSize="10dp"		android:layout_marginLeft="30dp"		android:layout_marginRight="25dp"		android:layout_gravity="center"/>	<TextView		android:text="@string/have_wema_mobile"		android:textColor="@android:color/black"		android:layout_marginTop="15dp"		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:textSize="10dp"		android:layout_marginLeft="30dp"		android:layout_marginRight="25dp"		android:layout_gravity="center"/></LinearLayout>