<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/mainView"
    android:padding="30dp">

    <ImageView
		android:layout_gravity="center_horizontal"
		android:src="@drawable/newlogo"
		android:contentDescription="@string/alat_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

	<TextView
		android:text="@string/welcom_back"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:layout_gravity="center_vertical"/>


	<TextView
		android:text="@string/email_Address"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="15dp"
	    android:textColor="@android:color/black"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"/>

	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/edt_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
		android:padding="10dp"
		android:layout_gravity="center"
		android:text="jic@gmail.com"
		android:background="@drawable/custom_edttxt_bg"/>

		<TextView
		android:text="@string/_password"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"/>

	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/edt_password"
        android:layout_width="300dp"
		android:layout_gravity="center"
		android:inputType="textPassword"
		android:password="true"
        android:layout_height="40dp"
		android:padding="10dp"
		android:text="vicanthony"
		android:background="@drawable/custom_edttxt_bg"/>

	<TextView
		android:text="@string/forget_password"
		android:textColor="#830053"
		android:layout_marginTop="20dp"
		android:textAlignment="textEnd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/btn_login2"
		android:text="@string/log_in"
		android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
		android:layout_gravity="center"
		android:background="#830053"
		android:textColor="@android:color/white"/>

	<TextView
		android:text="@string/unable_to"
		android:textColor="@android:color/black"
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="12dp"
		android:layout_gravity="center_vertical"/>
	<TextView
		android:text="@string/new_to_wema"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="10dp"
		android:layout_gravity="center_vertical"/>
	<TextView
		android:text="@string/new_to_alat"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="10dp"
		android:layout_gravity="center_vertical"/>
	<TextView
		android:text="@string/have_wema_mobile"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="10dp"
		android:layout_gravity="center_vertical"/>

</LinearLayout>
