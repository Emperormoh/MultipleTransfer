<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>


	<androidx.cardview.widget.CardView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		app:cardCornerRadius="10dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Amount:"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_amount"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="N9000"
					android:layout_marginBottom="3dp"
					android:textAlignment="center"
					android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Recipient  Account:"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_acctNum"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="0123456789"
					android:layout_marginBottom="3dp"
					android:layout_marginRight="30dp"
					android:textAlignment="center"
					android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Sender Account:"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_senderAcct"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="3dp"
					android:text="0123456789"
					android:layout_marginRight="10dp"
					android:textAlignment="center"
					android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Transaction Type"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_type"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Transfer"
					android:layout_marginBottom="3dp"
					android:textAlignment="center"
					android:layout_marginRight="45dp"
					android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Date:"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_date"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="01/12/2022 11:57 AM"
					android:layout_marginBottom="3dp"
					android:textAlignment="center"
					android:layout_marginLeft="116dp"
					android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:text="Ref ID:"
					android:layout_marginLeft="15dp"
					android:layout_marginBottom="3dp"
					android:textColor="@android:color/black"
					android:layout_height="wrap_content"/>


				<TextView
					android:id="@+id/txt_trans_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Am67655ount"
					android:layout_marginBottom="3dp"
					android:textAlignment="center"
					android:textColor="@android:color/black"/>
			</LinearLayout>
		</LinearLayout>


	</androidx.cardview.widget.CardView>




</LinearLayout>